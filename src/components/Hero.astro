<section class="hero">
  <div class="container hero-grid">
    <div class="hero-text reveal">
      <h1 class="hero-title">Language<br />Layouts</h1>
      <p class="hero-subtitle">
        Notion templates for students who want true mastery
        and teachers who deliver results.
      </p>
      <div class="hero-actions">
        <a href="#templates" class="btn">Get Templates</a>
        <a href="#framework" class="hero-link">Learn the Framework</a>
      </div>
    </div>
    <div class="hero-image reveal">
      <video autoplay loop muted playsinline>
        <source src="/images/hero-animation.mp4" type="video/mp4" />
      </video>
    </div>
  </div>
</section>

<style>
  .hero {
    background-color: var(--color-white);
    padding-top: 128px;
    padding-bottom: 80px;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 48px;
  }

  .hero-title {
    font-family: var(--font-heading);
    font-size: 5.5rem;
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.02em;
    margin-bottom: 24px;
  }

  .hero-subtitle {
    font-size: 1.1rem;
    color: var(--color-gray-dark);
    line-height: 1.7;
    max-width: 400px;
  }

  .hero-actions {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-top: 32px;
  }

  .hero-link {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-gray-dark);
    text-decoration: none;
    border-bottom: 1px solid var(--color-gray-light);
    padding-bottom: 2px;
    transition: color 0.2s, border-color 0.2s;
  }

  .hero-link:hover {
    color: var(--color-black);
    border-color: var(--color-black);
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .hero-image video {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 100px;
      padding-bottom: 60px;
    }

    .hero-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-title {
      font-size: 3.5rem;
    }

    .hero-subtitle {
      margin: 0 auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-image {
      order: -1;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding-top: 88px;
      padding-bottom: 48px;
    }

    .hero-title {
      font-size: 2.8rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .hero-actions {
      gap: 16px;
      margin-top: 24px;
    }
  }
</style>
