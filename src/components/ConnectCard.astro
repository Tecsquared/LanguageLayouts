---
interface Props {
  icon: string;
  title: string;
  subtitle: string;
  href: string;
}

const { icon, title, subtitle, href } = Astro.props;
---

<a href={href} class="connect-card" target="_blank" rel="noopener noreferrer">
  <div class="connect-text">
    <span class="connect-title">{title}</span>
    <span class="connect-subtitle">{subtitle}</span>
  </div>

  <div class="connect-arrow">
    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M7 17L17 7M17 7H7M17 7v10" />
    </svg>
  </div>
</a>

<style>
  .connect-card {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    transition: transform 0.2s, box-shadow 0.2s;
    background: var(--color-white);
    height: 100%;
    box-sizing: border-box;
  }

  .connect-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .connect-text {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .connect-title {
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 1.1rem;
    letter-spacing: -0.01em;
  }

  .connect-subtitle {
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    color: var(--color-gray-light);
    text-transform: uppercase;
  }

  .connect-arrow {
    width: 20px;
    height: 20px;
    color: var(--color-gray-light);
    flex-shrink: 0;
  }

  .connect-arrow svg {
    width: 100%;
    height: 100%;
  }
</style>
