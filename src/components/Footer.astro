---
const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-brand">
      <span class="footer-logo">Language Layouts</span>
      <p class="footer-tagline">Research-backed Notion templates for language learners and teachers.</p>
    </div>

    <nav class="footer-nav">
      <a href="#framework">Framework</a>
      <a href="#templates">Templates</a>
      <a href="#coaching">Coaching</a>
      <a href="#connect">Connect</a>
    </nav>

    <div class="footer-bottom">
      <span class="footer-copy">&copy; {year} Language Layouts. All rights reserved.</span>
      <a href="#" class="back-to-top" aria-label="Back to top">
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M8 14V2M8 2L3 7M8 2L13 7" />
        </svg>
        Top
      </a>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    padding: 48px 0 32px;
    border-top: 1px solid var(--color-border);
  }

  .footer-inner {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-logo {
    font-family: var(--font-heading);
    font-weight: 900;
    font-size: 1.2rem;
    letter-spacing: -0.02em;
  }

  .footer-tagline {
    font-size: 0.85rem;
    color: var(--color-gray);
    max-width: 320px;
  }

  .footer-nav {
    display: flex;
    gap: 24px;
  }

  .footer-nav a {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--color-gray-dark);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-nav a:hover {
    color: var(--color-black);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
  }

  .footer-copy {
    font-size: 0.75rem;
    color: var(--color-gray-light);
  }

  .back-to-top {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-gray);
    text-decoration: none;
    transition: color 0.2s;
  }

  .back-to-top:hover {
    color: var(--color-black);
  }

  @media (max-width: 768px) {
    .footer-nav {
      flex-wrap: wrap;
      gap: 16px;
    }
  }
</style>
